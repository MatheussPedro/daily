generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  senha     String

  cliente   Cliente
}

model Cliente {
  id        Int      @id @default(autoincrement())
  tipo      String
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  endereco  Endereco
}

model Endereco {
  id         Int      @id @default(autoincrement())
  rua        String
  numero     String
  bairro     String
  cidade     String
  uf         String
  cep        String

  clienteId  Int      @unique
  cliente    Cliente  @relation(fields: [clienteId], references: [id])
}