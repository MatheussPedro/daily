generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String?
  email     String     @unique
  pass      String
  tipo      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  cliente   Cliente?
  diarist   Diarist?
}

model Diarist {
  id          Int      @id @default(autoincrement())
  cpf         String
  cnpj        String?
  service     String
  priceTime   Float
  experience  Int
  observation String
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id])
  phones      Phone[]
}

model Cliente {
  id        Int       @id @default(autoincrement())
  userId    Int       @unique
  user      User      @relation(fields: [userId], references: [id])
  enderecos Endereco[]
  phones    Phone[]
}

model Phone {
  id          Int       @id @default(autoincrement())
  number      String
  clienteId   Int?
  diaristId   Int?
  cliente     Cliente?  @relation(fields: [clienteId], references: [id])
  diarist     Diarist?  @relation(fields: [diaristId], references: [id])
}

model Endereco {
  id        Int      @id @default(autoincrement())
  rua       String
  numero    String
  bairro    String
  cidade    String
  uf        String
  cep       String
  clienteId Int
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
}